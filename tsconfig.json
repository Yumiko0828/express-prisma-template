{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
  },
}
